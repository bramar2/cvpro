{
    "name": "Canva Pro",
    "description": "Unlock pro features.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "action": {
      "default_popup": "pages/action-page.html",
      "default_icon": "images/icon-16.png"
    },
    "content_scripts": [
        {
            "js": ["scripts/config.js", "scripts/content.js"],
            "matches": [
                "https://www.canva.com/*"
            ],
            "run_at": "document_start"
        }
    ]
  }